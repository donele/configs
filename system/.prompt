if env | grep SHELL | grep bash > /dev/null; then
  # \e[x;ym : start color scheme, x = 0, y = 30-36
  # \e[m : stop color scheme
  # 0;36 : cyan

  export PS1="\e[0;36m[\$(weekday) \t \u@\h:\w]\e[m\$(get_git_branch)\e[m\n$ "

elif env | grep SHELL | grep zsh > /dev/null; then
  # %n: $USERNAME
  # %m: hostname
  # %f: stop using foreground color
  # %#: # if previleged else %

  autoload -Uz vcs_info
  precmd() { vcs_info }
  zstyle ':vcs_info:git:*' formats '(%b)'
  zstyle ':vcs_info:*' enable git
  NEWLINE=$'\n'
  setopt PROMPT_SUBST
  PROMPT="%F{green}[$(weekday) %* %n@%m %0~]%f ${vcs_info_msg_0_}${NEWLINE}%# "
fi
export EDITOR=vim


